<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#014524"
    tools:context=".AllergyMedications">

    <!-- Wrap the content in a ScrollView -->

    <TextView
        android:id="@+id/txtallergymed"
        android:layout_width="305dp"
        android:layout_height="95dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/chewy"
        android:gravity="center|top"
        android:text="Allergy Medications"
        android:textColor="#E0AE77"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtallergymed"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/txtmedecationinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="@font/acme"
                android:text="@string/allergy_medications_info"
                android:textColor="#E0AE77"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/acme"
                android:gravity="left"
                android:text="@string/medecationtypes"
                android:textColor="#E0AE77" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="334dp"
                android:layout_height="199dp"
                android:layout_marginBottom="20dp"
                app:srcCompat="@drawable/allergymedication" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
