<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#014524"
    tools:context=".WhatTheSystemProvideActivity">

    <TextView
        android:id="@+id/txttitle"
        android:layout_width="275dp"
        android:layout_height="116dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/chewy"
        android:gravity="center"
        android:text="Allergy Wise System"
        android:textColor="#E0AE77"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/lstoptions"
        android:layout_width="312dp"
        android:layout_height="325dp"
        android:layout_marginTop="36dp"
        android:background="#014524"
        android:entries="@array/options"
        android:textColor="#E0AE77"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txttitle" />

    <ImageView
        android:id="@+id/imgstyle"
        android:layout_width="229dp"
        android:layout_height="105dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lstoptions"
        app:srcCompat="@drawable/style" />
</androidx.constraintlayout.widget.ConstraintLayout>