<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#014524">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".WhatIsAllergyActivity">

        <TextView
            android:id="@+id/txtwhat"
            android:layout_width="307dp"
            android:layout_height="115dp"
            android:layout_marginTop="64dp"
            android:fontFamily="@font/chewy"
            android:gravity="center"
            android:text="What Is An Allergy?"
            android:textColor="#E0AE77"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtinfo"
            android:layout_width="307dp"
            android:layout_height="323dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/acme"
            android:gravity="fill_horizontal|left"
            android:text="@string/info"
            android:textColor="#E0AE77"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtwhat" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="235dp"
            android:layout_height="329dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtinfo"
            app:srcCompat="@drawable/infowhat" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
