<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#014524"
        android:gravity="start"
        tools:context=".EmergencyContactActivity">

        <!-- Title Text -->
        <TextView
            android:id="@+id/txtemergencycontacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/chewy"
            android:gravity="center"
            android:text="Emergency Contacts"
            android:textColor="#E0AE77"
            android:textSize="30sp" />

        <!-- Add Contact Label -->
        <TextView
            android:id="@+id/txtaddlable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/acme"
            android:text="Add a Contact : "
            android:textColor="#E0AE77"
            android:textSize="20sp" />

        <!-- Full Name Label -->
        <TextView
            android:id="@+id/txtcontactname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/acme"
            android:text="Full Name :"
            android:textColor="#E0AE77"
            android:textSize="18sp" />

        <!-- Full Name Input -->
        <EditText
            android:id="@+id/edtcontactname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginStart="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/acme"
            android:hint="Name"
            android:inputType="text"
            android:textColor="#E0AE77"
            android:textSize="16sp" />

        <!-- Phone Number Label -->
        <TextView
            android:id="@+id/txtnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/acme"
            android:text="Phone Number : "
            android:textColor="#E0AE77"
            android:textSize="18sp" />

        <!-- Phone Number Input -->
        <EditText
            android:id="@+id/edtnumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginStart="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:ellipsize="start"
            android:fontFamily="@font/acme"
            android:hint="Phone number"
            android:inputType="phone"
            android:textColor="#E0AE77" />

        <!-- Add Button -->
        <Button
            android:id="@+id/btncontactadd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/acme"
            android:gravity="center"
            android:text="Add"
            android:textColor="#014524"
            android:textSize="16sp"
            app:iconGravity="end" />

        <!-- Emergency Contacts List Title -->
        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="44dp"
            android:fontFamily="@font/acme"
            android:gravity="center"
            android:text="My Emergency Contacts :"
            android:textColor="#E0AE77"
            android:textSize="20sp" />

        <!-- List View to display contacts -->
        <ListView
            android:id="@+id/contactlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="100dp" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>
